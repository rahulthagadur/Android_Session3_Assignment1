<?xml version="1.0" encoding="utf-8"?>
<!--Layout for the VIBGYOR colors each has been placed in a
TextView and respective color has been applied-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    tools:context="com.example.thagadur.vibgyor.VIBGYOR">
<!--Each Text view has been assigned with specifi color
to give correct spacing each has been divided by weight->1-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="RED"
        android:textAllCaps="true"
        android:layout_weight="1"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="Orange"
        android:textAlignment="center"
        tools:background="@color/Orange"
        android:textAllCaps="true"
        android:gravity="center_vertical|center_horizontal"/>


    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Yellow"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="yellow"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Green"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="GREEN"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blue"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="Blue"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Indigo"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="Indigo"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Violet"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="Violet"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:gravity="center_vertical|center_horizontal"/>

</LinearLayout>
<!--Linear Layout ends hear which arranged in the
vertical orientation-->